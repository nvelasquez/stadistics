body {
	background:url("../images/fondocuadro.jpg")repeat;
	margin:0 auto;
	font-family: arial;
font-weight: normal;
}

a {
	text-decoration:none;
}
select {
	width:130px;
}
label {
	color:white;
}
#info_desa h3 {
	margin-top: 3px;
margin-left: 8px;
color: white;
}
#wrapper {
	
}

#content_menu {
	height:250px;
	width:100%;
	background:#666;
	position: absolute;
	margin-top:-230px;
	z-index: 1000000;
}
#content_menu .filtros{
	height:200px;
	width:100%;
	background:
rgb(43, 43, 43);
padding-left: 10px;
}

#content_menu #info_desa{
	height:30px;
	width:100%;
	background: #45484d;
border-top: 1px solid rgb(150, 150, 150);
border-bottom: 1px rgb(82, 79, 79) solid;
}
#content_menu .logo{
	height:50px;
	width:100%;
	background: #45484d; /* Old browsers */
background: -moz-linear-gradient(top,  #45484d 0%, #1c1c1c 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#45484d), color-stop(100%,#1c1c1c)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #45484d 0%,#1c1c1c 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #45484d 0%,#1c1c1c 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #45484d 0%,#1c1c1c 100%); /* IE10+ */
background: linear-gradient(to bottom,  #45484d 0%,#1c1c1c 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#45484d', endColorstr='#1c1c1c',GradientType=0 ); /* IE6-9 */
border-top: 1px solid rgb(32, 32, 32);
border-bottom: solid 1px rgb(20, 20, 20);
box-shadow: 0px 1px 5px rgb(7, 7, 7);
}
#content_menu .logo img {
	float:left;
}

.menu_navegacion{
	float:right;
	margin-right:20px;
}
.current {
	background: rgb(32, 32, 32);
border-left: rgb(87, 87, 87) solid 1px !important;
padding-left: 20px !important;
color: rgb(216, 216, 216) !important;
}
.menu_navegacion li{
	display: inline;
text-align: center;
margin-right: 30px;
margin-right: -5px;
padding-top: 18px;
padding-bottom: 15px;
padding-right: 10px;
color:rgb(162, 162, 162);
padding-left: 10px;
text-align: center;
border-left: rgb(24, 24, 24) solid 1px;
border-right: rgb(24, 24, 24) solid 1px;
font-size:14px;
cursor:pointer;
box-shadow: 0px 0px 3px rgb(44, 44, 44);
-webkit-transition: background 0.1s, padding-left 0.1s;
}
.menu_navegacion li:hover {
	background: rgb(32, 32, 32);

}
.down{
	width: 130px;
border: rgb(53, 50, 50) solid 1px;
color: white;
float:right;
background: rgb(16, 102, 255);
margin-right: 10px;
padding: 10px;
padding-right:10px;
box-shadow: 1px 1px 3px black;
cursor:pointer;
margin-top:5px;
}

.down:hover {
	background:rgb(13, 82, 206)
}
#content_graphic{
	
border-right: rgb(44, 44, 44) solid 1px;
background: rgba(158, 197, 255,1);
}

#content_map{
	background:yellow;
}

#content_tabla{
	background:green;
}

#container {
	display: inline-block;
	overflow: hidden;
	width: 100%;
	height: auto;
	margin-top: 60px;
	box-shadow: -5px 1px 5px rgb(7, 7, 7);
}
#content_graphic, #content_tabla, #content_map {
	width:100%;
	height:500px;
	position:absolute;
	box-shadow: -5px 1px 5px rgb(7, 7, 7);
}
footer{
	margin-top: 510px;
	height:60px;
	width:100%;
	background: rgb(16, 102, 255);
	border-top: rgb(53, 50, 50) solid 1px;
	border-bottom: rgb(53, 50, 50) solid 1px;
	box-shadow: 1px 1px 3px black;
}